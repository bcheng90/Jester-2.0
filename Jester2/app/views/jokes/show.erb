<div class="container">
  <% if current_user.id == @joke.user.id %>
    <div class="edit">
      <%= link_to 'Edit', edit_joke_path(joke.id)%> |
      <%= link_to 'Delete', joke_path(@joke.id), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
  <h1><%=@joke.line1%></h1>
  <span class="small">
    <a href="/jokes/<%= @joke.id %>"><%=@joke.comments.count%> comments</a> and <%= rand(1..10)%> laughes for <a href="/users/<%=@joke.user.id%>"><%=@joke.user.name%></a> | <a href="/jokes/<%= @joke.id %>"><%=time(@joke)%> moons ago</a>
  </span>
  <p class="hr"><%=@joke.line2%></p>

  <div class="comments">
    <div class="comment_box">
      <%= render partial: "comments/new", locals: {joke_id: @joke.id} %>
    </div>

    <div class="comment_list">
      <ul>
        <% @joke.comments.each do |comment| %>
          <li>
            <%= render partial: "comments/show", locals: {comment: comment} %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>