<!DOCTYPE html>
<html>
<head>
  <title>Jester2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <ul class="left">
      <li id="list-header">
        <%= link_to "Jester", root_path %>
      </li>
      <% if current_user %>
      <li id="list-header"> |
        <%= link_to "New", new_joke_path %>
      </li>
      <% end %>
    </ul>
    <ul class="right">
      <% if current_user %>
        <li id="list-header">
          <%= link_to "#{current_user.name}", user_path(current_user.id) %>
        </li> |
        <li id="list-header">
          <!-- TODO: Broked the logout -->
          <%= link_to 'Logout', session_path, method: :delete, data: { confirm: 'Logging out?' } %>
        </li>
      <% else %>
        <li id="list-header">
          <%= link_to "", new_session_path %>
        </li> |
        <li id="list-header">
          <%= link_to "Sign up", new_user_path %>
        </li>
      <% end %>
    </ul>
  </header>
  <%= image_tag("laugh.png", id: "haha") %>
<%= yield %>

</body>
</html>
