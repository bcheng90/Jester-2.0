<ul>
  <% @comments.order(:created_at).reverse.each do |comment|%>
  <li>
    <span class="small">
      <a href="/users/<%=comment.user.id%>"><%=comment.user.name%></a> said "<%= comment.message %>" for <a href="/jokes/<%= comment.joke_id%>"> this joke | <%=time(comment)%> moons ago</a>
    </span>
  </li>
  <% end %>
</ul>
