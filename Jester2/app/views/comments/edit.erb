<div class="container">
  <h4 class="center underline">Why so sneaky?</h4>

  <%= form_for @comment do |f|%>
    <%= f.text_field :message, id: "text"%></li>
    <%= hidden_field_tag "joke_id", @comment.joke_id %>
    <%= submit_tag "Submit" %>
  <% end %>
  <form action="/jokes/<%=@comment.joke_id%>/comments/<%=@comment.id%>/edit" method='post'>
    <input type='hidden' name='_method' value='put'/>
    <input id="text" type='text' placeholder='Edit Comment' name='message' value="<%=@comment.message%>" /><br>
  <br>
    <input type='submit' value='Apply Changes'/>
  </form>
</div>